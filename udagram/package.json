{
  "scripts": {
    "backend:install": "cd udagram-api && npm install",
    "backend:build": "cd udagram-api && npm run build",

    "frontend:lint": "cd udagram-frontend && npm run lint",
    "frontend:install": "cd udagram-frontend && npm install --force",
    "frontend:build": "cd udagram-frontend && npm run build",

    "backend:deploy": "cd udagram-api && npm run deploy",
    "frontend:deploy": "cd udagram-frontend && npm run deploy",

    "app:all": "npm run backend:install && npm run backend:build && npm run frontend:install && npm run frontend:build && npm run backend:deploy && npm run frontend:deploy"
  }
}